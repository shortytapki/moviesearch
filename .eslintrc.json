{
  "extends": [
    "alloy",
    "alloy/react",
    "alloy/typescript",
    "plugin:react/recommended",
    "plugin:react/jsx-runtime"
  ],
  "parserOptions": { "project": ["./tsconfig.json"] },
  "globals": {
    "API_URL": true,
    "API_AUTH_TOKEN": true
  },
  "rules": {
    "react/prop-types": "off",
    "complexity": ["error", { "max": 30 }],
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    "no-console": "warn"
  },
  "ignorePatterns": ["json-server"]
}
